{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {
        "include": ".env",
        "outDir": "dist/src"
      },
      {
        "include": ".env.development",
        "outDir": "dist/src"
      },
      {
        "include": ".env.test",
        "outDir": "dist/src"
      },
      {
        "include": ".env.production",
        "outDir": "dist/src"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "introspectComments": true
        }
      }
    ],
    "webpack": true
  }
}
